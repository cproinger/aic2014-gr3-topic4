		<dependency>
			<groupId>aic2014-gr3-topic4</groupId>
			<artifactId>aic2014-gr3-topic4-graphdb</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.springframework</groupId>
